pipeline {
  agent any

  tools {
    nodejs 'nodejs-20.3.1' // Replace 'nodejs' with the name of your Node.js installation in Jenkins
  }

  stages {
    stage('Init') {
      // Setup
      steps {
        sh 'npm install'
      }
    }

    stage('Test') {
      // Build test image and run test image
      steps {
        sh 'npm run test'
      }
    }

    stage('Build') {
      // Build production image
      steps {
        sh 'npm run build'
      }
    }

    stage('Deploy') {
      // rollout restart 
      steps {
        sh 'npm run deploy'
      }
    }
  }
}
